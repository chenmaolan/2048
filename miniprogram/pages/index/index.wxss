page{
  background: #faf8ee;
  padding:20rpx;
  box-sizing: border-box;
}
.top-content{
  display: flex;
  /* justify-content: space-around; */
}
.top-left{
  width:50%;
  text-align: center;
  font-size: 120rpx;
  font-weight: bold;
}
.top-right{
  display: flex;
  justify-content: space-around;
  width:50%;
}
.title-box{
 text-align: center; 
}
.text-title{
  font-size: 40rpx;
}
.score-num{
  font-size: 35rpx;  
}
.middle{
  margin: 30rpx 0;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
}
.rectangle{
  width:710rpx; 
  height: 710rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background: #bbada0;
  border-radius: 10rpx 10rpx;
}
.row{
  display: flex;
  height: 25%;
}
.cloum{
  width: 25%;
  margin: 10rpx;
  text-align: center;
  background:  rgba(238, 228, 218, 0.35);
  border-radius: 10rpx 10rpx;
}
.cell{
  width: 100%;
  height: 100%;
  background:  rgba(238, 228, 218, 0.35);
  line-height: 150rpx;
  font-size: 60rpx;
  font-weight: bold;
  border-radius: 10rpx 10rpx;
}
